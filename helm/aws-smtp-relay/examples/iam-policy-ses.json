{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "SendEmailViaSES",
      "Effect": "Allow",
      "Action": [
        "ses:SendEmail",
        "ses:SendRawEmail"
      ],
      "Resource": "*"
    },
    {
      "Sid": "AllowCrossAccountSending",
      "Effect": "Allow",
      "Action": [
        "ses:SendEmail",
        "ses:SendRawEmail"
      ],
      "Resource": [
        "arn:aws:ses:*:*:identity/*"
      ],
      "Condition": {
        "StringLike": {
          "ses:FromAddress": "*"
        }
      }
    }
  ]
}
